<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:padding="@dimen/size_base480_10dp"
                android:background="@color/white"
                android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_order_num"
        style="@style/dingdan"
        android:text="订单号:"
        android:padding="@dimen/size_base480_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_tv_time"
        style="@style/dingdan"
        android:text="时间:"
        android:layout_below="@+id/item_order_num"
        android:drawableLeft="@drawable/dingdanxiangqing_timer"
        android:padding="@dimen/size_base480_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/item_view1"
        android:layout_below="@+id/item_tv_time"
        android:layout_width="match_parent"
        android:background="@color/darkgrey"
        android:layout_height="0.5dp">
    </View>

    <TextView
        android:id="@+id/item_tv_start"
        style="@style/dingdan"
        android:padding="@dimen/size_base480_10dp"
        android:text="起点:"
        android:drawableLeft="@drawable/dingdankaishi"
        android:layout_below="@+id/item_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_tv_end"
        style="@style/dingdan"
        android:text="结束:"
        android:padding="@dimen/size_base480_10dp"
        android:layout_below="@+id/item_tv_start"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/dingdanjieshu"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_tv_prder_status"
        android:text="订单状态:"
        style="@style/dingdan"
        android:padding="@dimen/size_base480_10dp"
        android:layout_below="@+id/item_tv_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_tv_money"
        style="@style/dingdan"
        android:text="价格:"
        android:padding="@dimen/size_base480_10dp"
        android:layout_below="@+id/item_tv_prder_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/item_view2"

        android:background="@color/darkgrey"
        android:layout_below="@+id/item_tv_money"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </View>

    <ImageView
        android:id="@+id/item_iv_1"
        android:background="@drawable/dingdanxiangqing_weiwancheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>