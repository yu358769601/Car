<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qichen.ruida.ui.PayActivity">

    <LinearLayout
        android:padding="20dp"

        android:gravity="center_horizontal"
        android:id="@+id/pop_layout"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView

            android:id="@+id/tv_pay_weixin"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/iconweixinlogo"
            android:text="微信支付"
            android:visibility="visible"
            >
        </TextView>

        <TextView
            android:id="@+id/tv_pay_zhifubao"
            android:gravity="center"
            android:drawableTop="@drawable/icon_payzhifu"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="支付宝支付"
            >

        </TextView>
    </LinearLayout>

    <com.qichen.ruida.view.LoadingView_09
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.qichen.ruida.view.LoadingView_09>
</RelativeLayout>
