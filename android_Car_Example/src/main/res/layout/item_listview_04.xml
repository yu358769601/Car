<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rl_background"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:minHeight="200dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_top"
        android:background="@color/black"

        android:id="@+id/view5" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="10dp"
            android:id="@+id/item_order_tv_title"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="哈尔滨气泡汽配"
            android:textSize="15sp"
            android:layout_alignParentTop="true"

            />
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="订单编号:"
            android:id="@+id/order_no"
            android:layout_below="@+id/item_order_tv_title"
            />

        <TextView
            android:id="@+id/item_tv_Order_status"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="等待买家付款"
            android:textColor="@color/blue"
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp" />
    </RelativeLayout>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_top"
        android:background="@color/black" />

    <LinearLayout

        android:id="@+id/ll_mid"
        android:orientation="horizontal"
        android:layout_below="@id/view"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!--设置占位图xml-->
        <ImageView

            android:id="@+id/item_order_facebook_item_sellerImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/view"

            />



        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/item_order_tv_Commodity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:id="@+id/item_order_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blue"
                android:layout_marginBottom="-2dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/item_order_tv_Commodity_label"
                android:layout_marginLeft="15dp"
                />
            <TextView

                android:id="@+id/item_order_tv_trade_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="类别"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/item_order_tv_Commodity_label"
                android:layout_alignStart="@+id/item_order_tv_Commodity_label" />
            <TextView
                android:id="@+id/item_order_tv_timedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/item_order_tv_trade_name"
                android:layout_alignStart="@+id/item_order_tv_trade_name"
                android:layout_below="@+id/item_order_tv_trade_name"
                android:layout_marginTop="6dp"
                android:text="2016-5-19 22:18"
                android:textColor="@color/black" />



            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="11sp"-->
            <!--android:textColor="@color/gray_fu"-->
            <!--android:id="@+id/order_no"-->
            <!--android:layout_alignTop="@+id/item_order_tv_trade_name"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true"/>-->

        </RelativeLayout>


    </LinearLayout>




    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll_mid"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@+id/rl_down_linegray"
        android:layout_below="@+id/re_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view2"

            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"


            android:background="@color/black" />
        <View
            android:id="@+id/view3"

            android:layout_width="match_parent"
            android:layout_height="10dp"

            android:layout_below="@+id/view2"

            android:background="@color/black" />
        <View
            android:id="@+id/view4"

            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view3"
            android:background="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_down"
        android:layout_width="match_parent"
        android:padding="10dp"

        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_mid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:clickable="true"
            android:id="@+id/item_order_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="13611199579"
            android:textColor="@color/red"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/item_order_bt_payment"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_payzhifu"
            android:text="付款"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignTop="@+id/item_order_bt_cancellation_of_order"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView


            android:id="@+id/item_order_bt_cancellation_of_order"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_loaction_start"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_alignTop="@+id/item_order_tv_phone"
            android:layout_toLeftOf="@+id/item_order_bt_payment"
            android:layout_toStartOf="@+id/item_order_bt_payment" />
    </RelativeLayout>


</RelativeLayout>
